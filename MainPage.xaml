        <PasswordBox x:Name="pass" HorizontalAlignment="Left" Margin="160,670,0,0" VerticalAlignment="Top" FontSize="72" Width="1468" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Right" Margin="0,565,1130,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <Button x:Name="login1" Click="submitButtonClick" Content="Login" Margin="1143,865,0,0" VerticalAlignment="Top" Height="90" Width="459" FontSize="48" FontWeight="Bold" FontFamily="Comic Sans MS"/>
    </Grid>
</Page>
